<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hpstudio.forummain.mapper.UserMapper">

    <select id="getUsers" resultType="com.hpstudio.forummain.entity.User">
        select * from user where isDel =0
    </select>

    <select id="getUser" resultType="com.hpstudio.forummain.entity.User">
        select * from user where id=#{id} and isDel = 0
    </select>
</mapper>