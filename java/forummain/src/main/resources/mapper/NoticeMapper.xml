<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hpstudio.forummain.mapper.NoticeMapper">

    <select id="getNoticeList" resultType="com.hpstudio.forummain.entity.Notice">
        select id,title,addDate from notice where isDel = 0 order by addDate desc
    </select>

    <select id="getNotice" resultType="com.hpstudio.forummain.entity.Notice">
        select * from notice where id = #{id} and isDel = 0
    </select>
</mapper>